{
  "editor.useTabStops": true,
  "workbench.editor.showTabs": "multiple",
  "git.mergeEditor": false,

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "editor.formatOnSave": true,

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,

  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools",
    "editor.tabSize": 4
  },

  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.tabSize": 4
  },
  "files.associations": {
    "stdio.h": "c"
  },

  "rust-analyzer.linkedProjects": [
    "day1/rust/Cargo.toml",
    "day2/rust/Cargo.toml",
    "day3/rust/Cargo.toml",
    "day4/rust/Cargo.toml",
    "day5/rust/Cargo.toml",
    "day6/rust/Cargo.toml",
    "day7/rust/Cargo.toml",
    "day8/rust/Cargo.toml",
    "day9/rust/Cargo.toml",
    "day10/rust/Cargo.toml",
    "day11/rust/Cargo.toml",
    "day12/rust/Cargo.toml",
    "day13/rust/Cargo.toml",
    "day14/rust/Cargo.toml",
    "day15/rust/Cargo.toml",
    "day16/rust/Cargo.toml"
  ]
}
